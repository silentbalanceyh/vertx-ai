export Z_DB_HOST="<%= dbHost %>"                                # 数据库地址
export Z_DB_PORT="<%= dbPort %>"                                # 数据库端口
export Z_DB_USERNAME="root"                                     # 数据库ROOT账号
# export Z_DB_PASSWORD=""                                       # 数据库ROOT密码
# 应用专用账号
export Z_DB_APP_USER="<%= dbUser %>"                            # 应用专用账号
