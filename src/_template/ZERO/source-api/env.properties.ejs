# =============================================================================
# R2MO Environment Variables Template
# 对应 Java 接口: io.zerows.platform.EnvironmentVariable
# =============================================================================
# -----------------------------------------------------------------------------
# 1. 🆔 身份标识 (Identity)
# -----------------------------------------------------------------------------
# 名空间 / App ID (UUID)
# Z_NS="<%= appNs %>"
# 应用名称 (e.g. app.micro.hotel)
Z_APP=<%= appName %>
# 应用 ID / UUID
Z_APP_ID=<%= appId %>
# 租户 ID / UUID
Z_TENANT=<%= appTenant %>
# 统一标识符 Σ
Z_SIGMA=<%= appSigma %>
# 语言环境
# Z_LANG="cn"
# -----------------------------------------------------------------------------
# 2. 🌐 网络配置 (Network)
# -----------------------------------------------------------------------------
# 跨域配置
# Z_CORS_DOMAIN=""
# RESTful
# API 端口
Z_API_PORT=7085
# API 绑定地址
# Z_API_HOST="0.0.0.0"
# 是否开启 SSL
# Z_API_SSL="false"
# WebSocket
# WebSocket 端口
# Z_SOCK_PORT="6083"
# WebSocket 绑定地址
# Z_SOCK_HOST="0.0.0.0"
# WebSocket 是否开启 SSL
# Z_SOCK_SSL="false"
# -----------------------------------------------------------------------------
# 3. 💾 数据库配置 (Database)
# -----------------------------------------------------------------------------
# 实例指针
# 业务数据库实例
Z_DBS_INSTANCE="<%= dbName %>_APP"
# 工作流数据库实例
Z_DBW_INSTANCE="<%= dbName %>_WF"
# 历史数据库实例
# Z_DBH_INSTANCE="<%= dbName %>_HIS"
# Cloud 专用三库统一配置
# 数据库类型: MYSQL / SQLSERVER / ORACLE / POSTGRESQL
Z_DB_TYPE="<%= dbType %>"
# 数据库地址
Z_DB_HOST="<%= dbHost %>"
# 数据库端口
Z_DB_PORT=<%= dbPort %>
# 数据库ROOT账号
Z_DB_USERNAME="root"
# 数据库ROOT密码
Z_DB_PASSWORD=""
# 应用专用账号
# 应用专用账号
Z_DB_APP_USER="<%= dbUser %>"
# 应用专用密码
Z_DB_APP_PASS="<%= dbPassword %>"
# -----------------------------------------------------------------------------
# 4. 🐳 容器/环境 (Container)
# -----------------------------------------------------------------------------
# Development / Production / Mockito
# Z_ENV="Development"
# -----------------------------------------------------------------------------
# 5. 📂 集成存储 (SIS)
# -----------------------------------------------------------------------------
# 集成服务存储路径
# Z_SIS_STORE=""
# 存储协议
# Z_SIS_SCHEME="file"
# Z_SIS_HOST=""
# Z_SIS_PORT=""
# Z_SIS_USERNAME=""
# Z_SIS_PASSWORD=""
# -----------------------------------------------------------------------------
# 6. 📝 文档服务 (Document - OnlyOffice)
# -----------------------------------------------------------------------------
# Token密钥
# Z_DOC_SECRET=""
# Z_DOC_HOST=""
# Z_DOC_PORT=""
# -----------------------------------------------------------------------------
# 7. ☁️ 云端注册 (Nacos)
# -----------------------------------------------------------------------------
# 基础工作目录
# R2MO_HOME=""
# Nacos 地址
# R2MO_NACOS_ADDR="127.0.0.1:8848"
# Nacos 账号
# R2MO_NACOS_USERNAME=""
# Nacos 密码
# R2MO_NACOS_PASSWORD=""
# 云端名空间
# R2MO_NS_CLOUD=""
# 应用名空间
# R2MO_NS_APP=""
# -----------------------------------------------------------------------------
# 8. 📊 监控服务 (Monitor)
# -----------------------------------------------------------------------------
# 监控专用 Docker Container 名称
# R2MO_MN_ID="hms-mn-monitor"
# Prometheus 端口
# R2MO_MN_PPORT=7190
# Grafana 端口
# R2MO_MN_GPORT=7191
# -----------------------------------------------------------------------------
# 9. 🚀 缓存服务 (Redis)
# -----------------------------------------------------------------------------
# Redis 地址
# R2MO_REDIS_HOST="127.0.0.1"
# Redis 端口
# R2MO_REDIS_PORT="6379"
# Redis 密码
# R2MO_REDIS_PASSWORD=""
# Redis 库索引
# R2MO_REDIS_DATABASE="0"
# -----------------------------------------------------------------------------
# 10. 🏺 遗留系统 (Legacy - AEON)
# -----------------------------------------------------------------------------
# AEON_CLOUD=""
# AEON_APP=""
