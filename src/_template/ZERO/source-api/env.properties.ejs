# =============================================================================
# R2MO Environment Variables Template
# 对应 Java 接口: io.zerows.platform.EnvironmentVariable
# =============================================================================
# -----------------------------------------------------------------------------
# 1. 🆔 身份标识 (Identity)
# -----------------------------------------------------------------------------
# Z_NS="<%= appNs %>"                                           # 名空间 / App ID (UUID)
Z_APP=<%= appName %>                                            # 应用名称 (e.g. app.micro.hotel)
Z_APP_ID=<%= appId %>                                           # 应用 ID / UUID
Z_TENANT=<%= appTenant %>                                       # 租户 ID / UUID
Z_SIGMA=<%= appSigma %>                                         # 统一标识符 Σ
# Z_LANG="cn"                                                   # 语言环境

# -----------------------------------------------------------------------------
# 2. 🌐 网络配置 (Network)
# -----------------------------------------------------------------------------
# Z_CORS_DOMAIN=""                                              # 跨域配置

# RESTful
Z_API_PORT=7085                                                 # API 端口
# Z_API_HOST="0.0.0.0"                                          # API 绑定地址
# Z_API_SSL="false"                                             # 是否开启 SSL

# WebSocket
# Z_SOCK_PORT="6083"                                            # WebSocket 端口
# Z_SOCK_HOST="0.0.0.0"                                         # WebSocket 绑定地址
# Z_SOCK_SSL="false"                                            # WebSocket 是否开启 SSL

# -----------------------------------------------------------------------------
# 3. 💾 数据库配置 (Database)
# -----------------------------------------------------------------------------
# 实例指针
Z_DBS_INSTANCE="<%= dbName %>_APP"                              # 业务数据库实例
Z_DBW_INSTANCE="<%= dbName %>_WF"                               # 工作流数据库实例
# Z_DBH_INSTANCE="<%= dbName %>_HIS"                            # 历史数据库实例

# Cloud 专用三库统一配置
Z_DB_TYPE="<%= dbType %>"                                       # 数据库类型: MYSQL / SQLSERVER / ORACLE / POSTGRESQL
Z_DB_HOST="<%= dbHost %>"                                       # 数据库地址
Z_DB_PORT=<%= dbPort %>                                         # 数据库端口
Z_DB_USERNAME="root"                                            # 数据库ROOT账号
Z_DB_PASSWORD=""                                                # 数据库ROOT密码
# 应用专用账号
Z_DB_APP_USER="<%= dbUser %>"                                   # 应用专用账号
Z_DB_APP_PASS="<%= dbPassword %>"                               # 应用专用密码

# -----------------------------------------------------------------------------
# 4. 🐳 容器/环境 (Container)
# -----------------------------------------------------------------------------
# Z_ENV="Development"                                           # Development / Production / Mockito

# -----------------------------------------------------------------------------
# 5. 📂 集成存储 (SIS)
# -----------------------------------------------------------------------------
# Z_SIS_STORE=""                                                # 集成服务存储路径
# Z_SIS_SCHEME="file"                                           # 存储协议
# Z_SIS_HOST=""
# Z_SIS_PORT=""
# Z_SIS_USERNAME=""
# Z_SIS_PASSWORD=""

# -----------------------------------------------------------------------------
# 6. 📝 文档服务 (Document - OnlyOffice)
# -----------------------------------------------------------------------------
# Z_DOC_SECRET=""                                               # Token密钥
# Z_DOC_HOST=""
# Z_DOC_PORT=""

# -----------------------------------------------------------------------------
# 7. ☁️ 云端注册 (Nacos)
# -----------------------------------------------------------------------------
# R2MO_HOME=""                                                  # 基础工作目录
# R2MO_NACOS_ADDR="127.0.0.1:8848"                              # Nacos 地址
# R2MO_NACOS_USERNAME=""                                        # Nacos 账号
# R2MO_NACOS_PASSWORD=""                                        # Nacos 密码

# R2MO_NS_CLOUD=""                                              # 云端名空间
# R2MO_NS_APP=""                                                # 应用名空间

# -----------------------------------------------------------------------------
# 8. 📊 监控服务 (Monitor)
# -----------------------------------------------------------------------------
# R2MO_MN_ID="hms-mn-monitor"                                   # 监控专用 Docker Container 名称
# R2MO_MN_PPORT=7190                                            # Prometheus 端口
# R2MO_MN_GPORT=7191                                            # Grafana 端口

# -----------------------------------------------------------------------------
# 9. 🚀 缓存服务 (Redis)
# -----------------------------------------------------------------------------
# R2MO_REDIS_HOST="127.0.0.1"                                   # Redis 地址
# R2MO_REDIS_PORT="6379"                                        # Redis 端口
# R2MO_REDIS_PASSWORD=""                                        # Redis 密码
# R2MO_REDIS_DATABASE="0"                                       # Redis 库索引

